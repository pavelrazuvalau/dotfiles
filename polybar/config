[colors]
background = #00ffffff
background-alt = #444
foreground = #dfdfdf
foreground-alt = #676E7D
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/default]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 22
;offset-x = 0
;offset-y = 0
;tray-position = right

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = NotoSans-Regular:size=8;2
font-1 = Termsynu:size=8;-1
font-2 = FontAwesome:size=10;2

modules-left = i3 music
modules-center = date
modules-right = memory cpu volume network battery xkeyboard whoami

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/music]
type = custom/script
format = <label>
label = %output:0:60:...%
exec = "~/i3-config/scripts/getmusicstatus"
interval = 5
click-left = "~/i3-config/scripts/togglepauseplay"
click-right = "cmus-remote -n"

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout =  %layout%

label-indicator-padding = 2
label-indicator-margin-left = 2 
label-indicator-background = ${colors.alert}

[module/network]
type = custom/script
exec = "~/i3-config/scripts/getnetworkstatus"
interval = 5
click-left = "xterm -e nmtui"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = #2f343f
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %gb_used%

[module/date]
type = internal/date
interval = 5

date = "%d.%m.%Y"

time = %H:%M

format-prefix = " "

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = %percentage%%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/whoami]
type = custom/script
exec = "echo  $(getent passwd $USER | cut -d: -f5 | cut -d, -f1)"